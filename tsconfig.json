{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "include": ["src"],
  "atom": {
    "rewriteTsconfig": false
  }
}
