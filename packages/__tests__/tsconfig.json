{
  "extends": "../tsconfig-build.json",
  "compilerOptions": {
    "declarationDir": "dist",
    "outDir": "dist/build",
    "lib": ["esnext", "dom"],
    "module": "commonjs",


    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,

    "jsx": "react",
    "jsxFactory": "hJsx",

    "types": [
      "./asserts",
      "node",
      "mocha",
      "chai",
      "sinon",
      "sinon-chai",
      "webpack-env",
      "@aurelia/kernel",
      "@aurelia/fetch-client",
      "@aurelia/runtime",
      "@aurelia/runtime-html",
      "@aurelia/runtime-html-browser",
      "@aurelia/runtime-html-jsdom",
      "@aurelia/router",
      "@aurelia/jit",
      "@aurelia/jit-html",
      "@aurelia/jit-html-browser",
      "@aurelia/jit-html-jsdom",
    ]
  },
  "include": ["."],
  "exclude": [
    "router",
    "runtime-html",
    "runtime-html-browser",
    "runtime-html-jsdom",
    "jit-html",
    "jit-html-browser",
    "jit-html-jsdom",
    "fetch-client",
    "dist"
  ]
}
