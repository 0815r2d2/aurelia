{
  "extends": "../tsconfig-build.json",
  "compilerOptions": {
    "declarationDir": "dist",
    "outDir": "dist/build",
    "lib": ["esnext", "dom"],
    "module": "commonjs",


    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,

    "jsx": "react",
    "jsxFactory": "hJsx",

    "types": [
      "@aurelia/testing/src/asserts",
      "node",
      "mocha",
      "chai",
      "sinon",
      "sinon-chai",
      "webpack-env"
    ]
  },
  "include": ["."],
  "exclude": [
    "router",
    "fetch-client",
    "dist"
  ]
}
