{
  "extends": "../tsconfig-build.json",
  "compilerOptions": {
    "declarationDir": "dist",
    "outDir": "dist/build",
    "lib": ["esnext", "dom"],
    "module": "esnext",


    "sourceMap": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "strict": false,
    "alwaysStrict": true,

    "jsx": "react",
    "jsxFactory": "hJsx",

    "types": [
      "@aurelia/testing/src/asserts",
      "node",
      "mocha",
      "chai",
      "sinon",
      "sinon-chai",
      "webpack-env"
    ]
  },
  "include": ["."],
  "exclude": [
    "router/e2e",
    "dist"
  ]
}
