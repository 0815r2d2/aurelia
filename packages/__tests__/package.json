{
  "name": "@aurelia/__tests__",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=8.11.4 <11.0.0",
    "npm": ">=6.1.0 <7.0.0"
  },
  "scripts": {
    "test-node": "cross-env TS_NODE_PROJECT=\"./tsconfig.node.json\" mocha --opts mocha.opts dist/build/__tests__/setup-node.js dist/build/__tests__/**/*.spec.js",
    "test-node:verbose": "cross-env TS_NODE_PROJECT=\"./tsconfig.node.json\" mocha --opts mocha.opts --reporter spec --bail setup-node.ts runtime/**/*.spec.ts",
    "test-node:watch": "npm run test-node -- --watch --watch-extensions ts",
    "lint:src": "tslint --project tsconfig.json -t stylish",
    "lint:test": "tslint --project tsconfig-test.json --config ../tslint-test.json -e \"src/**/*.ts\" -t stylish",
    "~test": "cross-env TS_NODE_PROJECT=\"../../scripts/tsconfig.json\" karma start ../../scripts/karma.conf.ts --package=debug",
    "test": "npm run ~test -- --browsers=ChromeHeadlessOpt --single-run --coverage",
    "test-firefox": "npm run ~test -- --browsers=FirefoxHeadless --single-run --coverage",
    "test:watch": "npm run ~test -- --browsers=ChromeHeadlessOpt --coverage",
    "test:watch:verbose": "npm run ~test -- --browsers=ChromeHeadlessOpt --coverage --reporter=mocha",
    "test:debugger": "npm run ~test -- --browsers=ChromeDebugging",
    "test:debugger:verbose": "npm run ~test -- --browsers=ChromeDebugging --reporter=mocha",
    "build": "tsc -b"
  },
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/jsdom": "^12.2.2",
    "@types/karma": "^3.0.2",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.27",
    "@types/sinon": "^7.0.6",
    "@types/sinon-chai": "^3.2.2",
    "@types/webpack": "^4.4.24",
    "@types/webpack-env": "^1.13.7",
    "@aurelia/aot": "0.3.0",
    "@aurelia/debug": "0.3.0",
    "@aurelia/fetch-client": "0.3.0",
    "@aurelia/jit-html-browser": "0.3.0",
    "@aurelia/jit-html-jsdom": "0.3.0",
    "@aurelia/jit-html": "0.3.0",
    "@aurelia/jit": "0.3.0",
    "@aurelia/kernel": "0.3.0",
    "@aurelia/router": "0.3.0",
    "@aurelia/runtime-html-browser": "0.3.0",
    "@aurelia/runtime-html-jsdom": "0.3.0",
    "@aurelia/runtime-html": "0.3.0",
    "@aurelia/runtime": "0.3.0",
    "@aurelia/store": "0.3.0",
    "@aurelia/validation": "0.3.0",
    "@aurelia/testing": "0.3.0",
    "chai": "^4.2.0",
    "esm": "^3.2.6",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jsdom": "^13.2.0",
    "karma": "^4.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-firefox-launcher": "^1.1.0",
    "karma-junit-reporter": "^1.2.0",
    "karma-min-reporter": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-source-map-support": "^1.4.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "mocha": "^6.0.1",
    "sinon": "^7.2.4",
    "sinon-chai": "^3.3.0",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0"
  },
  "devDependencies": {
    "chalk": "^2.4.2",
    "cross-env": "^5.2.0",
    "source-map": "^0.7.3",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslib": "^1.9.3",
    "typescript": "^3.3.3333"
  }
}
